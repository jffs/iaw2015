<%=form_for @usuario , :html => {:multipart => true} do |f|   %> 
  
  <div class="row">
    <form class="col s12">
      <div class="row">
        <div class="input-field col s6">
          <input placeholder="Placeholder" id="first_name" type="text" class="validate">
          <%= f.label :nombre %>
          <%= f.text_field :nombre, class: 'validate',required: true%>
        </div>
        <div class="input-field col s6">
          <%= f.label :apellido %>
          <%= f.text_field :apellido, class: 'form-control',required: true %>
        </div>
      </div>

  <div class="row">
  	<div class="col-md-8">
    	<%= f.label "Nombre de usuario" %>
    	<%= f.text_field :username, class: 'form-control',required: true,  placeholder: 'Ingrese un nombre de usuario' %>
  	</div>
  </div>
  <br/>
  <button type="submit" class="btn btn-danger">Guardar</button>
  </div>
<%  end  %>

