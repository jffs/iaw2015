<!DOCTYPE html>
<html>
<head>
  <%= stylesheet_link_tag    'application' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>

<body>

	<%= render 'layouts/header' %>
	
		<div class="col-md-10">    
			<% if flash[:notice] %>
				<div class="green-text thin center" role='alert'>
					<h3 class="thin"><%= flash[:notice]%></h3>
				</div>
				<%end%>
			<% if flash[:alert] %>
			    <div class="red-text thin center"><h3 class="thin"><%= flash[:alert] %></h3>
			    </div>	
			<%end%>
		<%= yield %>
		</div>
	</div>


</body>
</html>