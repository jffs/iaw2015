<body>
  <br>
      <div class="row">
        <div class="col s6 offset-s3">
          <div class="card blue-grey hoverable darken-1">
            <div class="card-content white-text">
              <span class="card-title">Búsqueda avanzada <i class="material-icons">search</i></span>
               <div class="row">
                <%= form_tag articles_path, :method => 'get' do%>
                    <div class="row">
                      <div class="input-field col s12">
                        <%= text_field_tag :name, params[:name], class: "validate" %>
                        <label for="name">Nombre o descripción</label>
                      </div>
                    </div>
                    <div class="row">
                      <div class="input-field col s12">
                        <%= text_field_tag :location, params[:location], class: "validate"%>
                        <label for="location">Ubicación</label>
                      </div>
                    </div>
                    <div class="row">
                      <div class="input-field col s6">
                      <%= text_field_tag :pricemin, params[:pricemin], placeholder: "0,0", class: "validate" %>
                      <label for="first_name">Precio mínimo</label>
                      </div>
                      <div class="input-field col s6">
                      <%= text_field_tag :pricemax, params[:pricemax], placeholder: "0,0", class: "validate" %>
                      <label for="last_name">Precio máximo</label>
                      </div>
                    </div>
              </div>
            </div>
            <div class="card-action center">
              <%= submit_tag "Buscar", class: "btn" %>
            </div>                  
            <%end%>

          </div>
        </div>
      </div>
<body>